<style>
    .maincontainer{
        background: #6FB3B8;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        }
    .box{
        width: 95%;
        height: auto;
        background: #fff;
        border-radius: 20px;
        padding: 5px;

    }
    .heading{
        font-size: 24px;
        letter-spacing: 1px;
        font-weight: bold;
        color: #273c75;
        margin-bottom: 10px;
    }
    .daysstyle{
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }
    .buttonstyle{
      width: 100%;
      
    }
</style>
<script src = "https://code.jquery.com/jquery-3.6.4.min.js"></script>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    </head>
<div class = "maincontainer">
    <div class="box">
<table class="table table-hover">
    <div class = "heading">
        <a href="/flight/flightinterface"><img src="/images/add record.png" width="30"></a>
        <img src="/images/flighticon.png" width="50">
        List Of Flight
    </div>
    <thead>
        <tr>
            <th scope="col">Flightname</th>
            <th scope="col">Days/Seats</th>
            <th scope="col">Source City/Time</th>
            <th scope="col">Destination</th>
            <th scope="col">Company</th>
            <th scope="col">Logo</th>
            <th scope="col">Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <% data.map((item)=>{%>
            <th scope="row">
                <%=item.flightname %>
                <br>
                <%=item.types %>
            </th>
            <td>
                Seats: <%=item.totalseats %> 
                <br>
                <%=item.days %> 
            </td>
            <td>
                <%=item.source %> 
                <br>
                <%=item.departuretime %> 
            </td>
            <td>
                <%=item.destination %> 
                <br>
                <%=item.arrialtime %> 
            </td>
            <td>
                <%=item.company %>
            </td>
            <td>
              <a href="/flight/searchbyidforimages?fid=<%=item.flightid%>"><img src="/images/<%=item.logo%>" width="30"/></a>
            </td>
            <td>
                <a href="/flight/searchbyid?fid=<%=item.flightid%>">
                    Edit/Delete
                </a>
                
            </td>
        </tr>
        <%})%>
    </tbody>
</table>
</div>
</div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </html>