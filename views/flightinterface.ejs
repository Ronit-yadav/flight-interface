<style>
    .maincontainer{
        background: #6FB3B8;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        }
    .box{
        width: 50%;
        height: auto;
        background: #fff;
        border-radius: 20px;
        padding: 15px;

    }
    .heading{
        font-size: 24px;
        letter-spacing: 1px;
        font-weight: bold;
        color: #6FB3B8;
        margin-bottom: 10px;
    }
    .daysstyle{
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }
    .buttonstyle{
      width: 100%;
      
    }
</style>
<script src = "https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src = "/javascripts/project.js"></script>
<html>
    <head>
        <title>
            Flight Interface
            
        </title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    </head>
        <div class = "maincontainer">
            <div class = "box">
                <div class = "heading">
                    <a href="/flight/displayallflight"><img src="/images/display.png" width="30"></a>
                    <img src="/images/flighticon.png" width="50">
                    Flight Interface
                </div>
                <div>
                    <form action="/flight/flightsubmit" method="post" enctype="multipart/form-data" class = "row g-3">
                        <div class="col-md-6">
                            <label for="flightname" class="form-label"><b>Flight Name</b></label>
                            <input type="text" class="form-control" name="flightname" id="flightname">
                          </div>
                          <div class="col-md-6">
                            <label for="flighttype" class="form-label"><b>Flight Type</b></label>
                            <select id="flighttype" name="flighttype" class="form-select">
                              <option selected>Choose...</option>
                              <option>Economy</option>
                              <option>Business</option>
                              <option>Economy/Business</option>
                            </select>
                          </div>
                          <div class="col-md-4">
                            <label for="noofseats" class="form-label"><b>No Of Seats</b></label>
                            <input type="text" class="form-control" name="noofseats" id="noofseats">
                          </div>
                          <div class="col-md-8 daystyle">
                            <label for="days" class="form-label"><b>Select Fligt Days</b></label>
                            <div class="daysstyle">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name = "days" value="Mon" id="days">
                                    <label class="form-check-label" for="days">
                                      Mon
                                    </label>
                                  </div>
                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name = "days" value="Tue" id="days">
                                    <label class="form-check-label" for="days">
                                      Tue
                                    </label>
                                  </div>
                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name = "days" value="Wed" id="days">
                                    <label class="form-check-label" for="days">
                                      Wed
                                    </label>
                                  </div>
                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name = "days" value="Thu" id="days">
                                    <label class="form-check-label" for="days">
                                      Thu
                                    </label>
                                  </div>
                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name = "days" value="Fri" id="days">
                                    <label class="form-check-label" for="days">
                                      Fri
                                    </label>
                                  </div>
                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name = "days" value="Sat" id="days">
                                    <label class="form-check-label" for="days">
                                      Sat
                                    </label>
                                  </div>
                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name = "days" value="Sun" id="days">
                                    <label class="form-check-label" for="days">
                                      Sun
                                    </label>
                                  </div>
                            </div>
                            
                          </div>
                          <div class="col-md-3">
                            <label for="sourcecity" class="form-label"><b>Source City</b></label>
                            <select id="sourcecity" name="sourcecity" class="form-select">
                              <option selected>Source City...</option>
                            </select>
                          </div>
                          <div class="col-md-3">
                            <label for="deptime" class="form-label"><b>Departure Time</b></label>
                            <input type="time" class="form-control" name="deptime" id="deptime">
                          </div>
                          <div class="col-md-3">
                            <label for="destinationcity" class="form-label"><b>Destination City</b></label>
                            <select id="destinationcity" name="destinationcity" class="form-select">
                              <option selected>Destination City...</option>
                            </select>
                          </div>
                          <div class="col-md-3">
                            <label for="arrivaltime" class="form-label"><b>Arrival Time</b></label>
                            <input type="time" class="form-control" name="arrivaltime" id="arrivaltime">
                          </div>
                          <div class="col-md-6">
                            <label for="company" class="form-label"><b>Company</b></label>
                            <input type="text" class="form-control" name="company" id="company">
                          </div>
                          <div class="col-md-6">
                            <label for="logo" class="form-label"><b> Logo</b></label>
                            <input type="file" class="form-control" name="logo" id="logo">
                          </div>
                          <div class="col-md-6">
                            <button type="submit" class="btn btn-secondary buttonstyle"><b>Submit</b></button>
                          </div>
                          <div class="col-md-6">
                            <button type="reset" class="btn btn-secondary buttonstyle"><b>Reset</b></button>
                          </div>
                          <div class = "col-md-12" style="display: flex;justify-content: center;padding: 5px;font-weight: bold;">
                            <%=message%>
                          </div>
                    </form>
                </div>
            </div>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</html>